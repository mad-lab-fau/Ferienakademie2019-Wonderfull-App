<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:fillViewport="false"
        android:paddingTop="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="2"
                android:stretchColumns="1">

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/vorname"
                        android:textSize="20sp"/>

                    <EditText
                        android:id="@+id/edit_surname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_span="2"
                        android:maxLines="1"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/name"
                        android:textSize="20sp"/>

                    <EditText
                        android:id="@+id/edit_name"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="20sp"
                        android:layout_span="2"
                        android:maxLines="1"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/gr_e_m"
                        android:textSize="20sp"/>

                    <EditText
                        android:id="@+id/edit_size"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="20sp"
                        android:layout_span="2"
                        android:inputType="numberDecimal"
                        android:maxLength="5"
                        android:maxLines="1"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/gewicht_kg"
                        android:textSize="20sp"/>

                    <EditText
                        android:id="@+id/edit_weight"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="20sp"
                        android:layout_span="2"
                        android:inputType="numberDecimal"
                        android:maxLength="6"
                        android:maxLines="1"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/vorerkrankungen"
                        android:textSize="20sp"/>

                    <EditText
                        android:id="@+id/edit_diseases"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="20sp"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:layout_span="2"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/medikamente"
                        android:textSize="20sp"/>

                    <EditText
                        android:id="@+id/edit_medication"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="20sp"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:layout_span="2"/>
                </TableRow>


                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/allergien"
                        android:textSize="20sp"/>

                    <EditText
                        android:id="@+id/edit_allergies"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="20sp"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:layout_span="2"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="10dp"
                        android:text="@string/edit_level"
                        android:textSize="20sp"/>

                    <Spinner
                        android:id="@+id/edit_select_level"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="20sp"
                        android:entries="@array/level_spinner"
                        android:layout_span="2"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="10dp"
                        android:text="@string/edit_contacts"
                        android:textSize="20sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_span="2"/>

                    <Button
                        android:id="@+id/edit_add_contact"
                        android:layout_height="30dp"
                        android:layout_width="30dp"
                        android:background="@drawable/round_button"
                        android:textColor="@color/white"
                        android:text="@string/edit_plus"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textSize="20sp"
                        android:onClick="addContact"/>

                </TableRow>


            </TableLayout>

            <LinearLayout
                android:id="@+id/edit_current_contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <Button
                android:id="@+id/edit_save"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/edit_save"
                android:onClick="saveProfile"
                android:background="@color/darkGreen"
                android:textColor="@color/white"
                android:layout_gravity="end"/>

        </LinearLayout>


    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>